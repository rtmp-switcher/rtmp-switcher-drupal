function channel_load($id) {
  try {
    db_set_active('video_switch');
    $ret = db_query("SELECT * FROM {channels}  where {channels}.id = :id", array(':id' => $id))->fetchObject();
    db_set_active('default');

    return $ret;
  } catch (Exception $e) {
    db_set_active('default');
    drupal_set_message(print($e));
